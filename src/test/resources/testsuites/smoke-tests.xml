<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Smoke Tests" verbose="1" parallel="methods" thread-count="20">
    <test name="Chrome Tests" >
        <groups>
            <run>
                <include name="chrome" />
            </run>
        </groups>
        <classes>
            <class name="smoke.NavigateTest" />
        </classes>
    </test>
    <test name="Firefox Tests" >
        <groups>
            <run>
                <include name="firefox" />
            </run>
        </groups>
        <classes>
            <class name="smoke.NavigateTest" />
        </classes>
    </test>
</suite>
